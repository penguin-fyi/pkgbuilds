# Maintainer: Jeff M. Hubbard <jeffmhubbard@gmail.com>
pkgname='penguin-desktop-themes'
_pkgname='desktop-themes'
pkgver=0.1.7
pkgrel=1
pkgdesc="Themes, icons, and fonts for the Penguin Desktop"
arch=('any')
url="https://penguin.fyi/"
license=('MIT')
depends=(archlinux-wallpaper 
         ngui-blue-gtk-theme ngui-darkblue-gtk-theme ngui-blue-icon-theme
         ngui-cyan-gtk-theme ngui-darkcyan-gtk-theme ngui-cyan-icon-theme
         ngui-green-gtk-theme ngui-darkgreen-gtk-theme ngui-green-icon-theme
         ngui-pink-gtk-theme ngui-darkpink-gtk-theme ngui-pink-icon-theme
         noto-fonts-emoji ttf-bitstream-vera ttf-dejavu ttf-hack
         ttf-nerd-fonts-symbols-2048-em xcursor-neutral xdecorator)

source=("https://github.com/penguin-fyi/$_pkgname/archive/refs/tags/v$pkgver.tar.gz")

md5sums=('592fde0427f67942b7f4ec0e953486ab')


package(){
	cd "$_pkgname-$pkgver"

  install -Dm0644 images/penguin-logo.svg "$pkgdir"/usr/share/pixmaps/penguin-logo.svg

  install -Dm0644 patches/lightdm-gtk-greeter.conf.patch "$pkgdir"/usr/share/penguin/patches/lightdm-gtk-greeter.conf.patch
  install -Dm0644 hooks/penguin-themes-patch.hook "$pkgdir"/usr/share/libalpm/hooks/90-penguin-themes-patch.hook

  install -Dm0644 README.md "$pkgdir"/usr/share/doc/penguin/desktop-themes/README.md
  install -Dm0644 LICENSE "$pkgdir"/usr/share/licenses/penguin/desktop-themes/LICENSE
}
