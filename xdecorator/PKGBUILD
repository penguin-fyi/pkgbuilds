# Maintainer: Jeff M. Hubbard <jeffmhubbard@gmail.com>
pkgname='xdecorator'
pkgver=0.0.2
pkgrel=1
pkgdesc="xsettingsd theme switcher"
arch=('any')
url="https://penguin.fyi/"
license=('MIT')
depends=(xsettingsd python-gobject)
source=(
    'xdecorator'
    'xdecorator.desktop'
    'LICENSE'
    'README.md'
)

package(){
    install -Dm0755 xdecorator "$pkgdir"/usr/bin/xdecorator
    install -Dm0644 xdecorator.desktop "$pkgdir"/usr/share/applications/xdecorator.desktop
    install -Dm0644 README.md "$pkgdir"/usr/share/doc/"$pkgname"/README.md
    install -Dm0644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}

md5sums=('f2ea8c2f2ccc1eccc8bab6649444f470'
         'e93256de7d5a7561e1e955b38b4eee56'
         'a8bd8e8b66169542c21de3c7633be00e'
         'e7dd940a79567e3d1e046a34c2afb7d9')
