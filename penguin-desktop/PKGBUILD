pkgname=penguin-desktop
pkgver=16
pkgrel=2
pkgdesc="The Penguin Desktop"
arch=('any')
url="https://penguin.fyi/"
license=('MIT')
depends=(arandr avahi awesome-git bash-completion blueman bluez-utils
         cups dex firefox fontconfig galculator gparted gst-libav gufw
         gvfs gvfs-smb kitty lightdm lightdm-gtk-greeter
         lightdm-gtk-greeter-settings light-locker lxtask-gtk3
         network-manager-applet nitrogen numlockx pamac-aur-git pavucontrol
         pcmanfm-gtk3 penguin-desktop-awesome penguin-desktop-config
         penguin-desktop-themes picom pipewire pipewire-alsa
         pipewire-pulse playerctl polkit-gnome rofi rofi-pass
         system-config-printer thunderbird udiskie unclutter
         volumeicon weechat xdg-user-dirs-gtk xdg-utils xed
         xorg-xdpyinfo xorg-server xorg-xset xorg-xrdb xorg-xrandr
         xplayer xplayer-plparser xreader xsettingsd xterm xviewer
         zsh-autosuggestions zsh-completions zsh-syntax-highlighting)

source=('autostart-nitrogen'
        'autostart-numlockx'
        'autostart-pcmanfm'
        'autostart-picom'
        'autostart-polkit-gnome'
        'autostart-udiskie'
        'autostart-unclutter'
        'autostart-user-dirs'
        'autostart-volumeicon'
        'penguin-desktop.install'
        'xsession-awesome-default'
        'LICENSE'
        'README.md')

md5sums=('4ec107b696df741315b00ede30bef9dd'
         'c199c9b4e5f5d1732136b661fb41d065'
         'b38d83c4be456823ea6e438d668792ab'
         'ff2e59135f736a3ddb059877bf0056a2'
         '527dc640676cffe1c12e560cdceefa38'
         'ea96caee4c180370818cbc8361d17f0e'
         '5343c3272d3c2b8b10b557eb12df84da'
         'c224f49d36649359c800a17892b52329'
         '6a7cd28a4ce7c7a40632840744f135e9'
         '14b842989b890c444c2872b3a1e9821e'
         'ed90137b894837697c3f635a0dbdc1fe'
         '32faed122940835fb3401d601b2d1e85'
         '872b54b4c48a4cfbfec06be7d53036f4')

package(){
    install=penguin-desktop.install

    install -Dm0644 autostart-nitrogen "$pkgdir"/etc/xdg/autostart/nitrogen.desktop
    install -Dm0644 autostart-numlockx "$pkgdir"/etc/xdg/autostart/numlockx.desktop
    install -Dm0644 autostart-pcmanfm "$pkgdir"/etc/xdg/autostart/pcmanfm.desktop
    install -Dm0644 autostart-picom "$pkgdir"/etc/xdg/autostart/picom.desktop
    install -Dm0644 autostart-polkit-gnome "$pkgdir"/etc/xdg/autostart/polkit-gnome.desktop
    install -Dm0644 autostart-udiskie "$pkgdir"/etc/xdg/autostart/udiskie.desktop
    install -Dm0644 autostart-unclutter "$pkgdir"/etc/xdg/autostart/unclutter.desktop
    install -Dm0644 autostart-user-dirs "$pkgdir"/etc/xdg/autostart/xdg-user-dirs.desktop
    install -Dm0644 autostart-volumeicon "$pkgdir"/etc/xdg/autostart/volumeicon.desktop

    install -Dm0644 xsession-awesome-default "$pkgdir"/usr/share/xsessions/awesome-default.desktop

    install -Dm0644 README.md "$pkgdir"/usr/share/$pkgname/README.md
    install -Dm0644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
