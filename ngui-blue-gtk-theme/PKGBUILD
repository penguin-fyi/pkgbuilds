# Maintainer: Jeff M. Hubbard <jeffmhubbard@gmail.com>
pkgname=ngui-blue-gtk-theme
_pkgname=nGUI-Blue
pkgver=0.1
pkgrel=1
pkgdesc="nGUI-Blue GTK theme"
arch=('any')
url="https://github.com/penguin-fyi/ngui-blue-gtk-theme"
license=('MIT')
depends=('gtk-engine-murrine')
source=("https://github.com/penguin-fyi/$pkgname/archive/refs/tags/v$pkgver.tar.gz")

sha256sums=('e8694950ade04af8d08a66ea0668d72ca20e5181cf535b0482427a16aff2a44a')

package() {
	cd "$pkgname-$pkgver"
	mkdir -p  "$pkgdir/usr/share/themes"
	cp -r $_pkgname "$pkgdir/usr/share/themes/$_pkgname"

	install -Dm0644 README.md "$pkgdir"/usr/share/doc/"$pkgname"/README.md
	install -Dm0644 LICENSE "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}
