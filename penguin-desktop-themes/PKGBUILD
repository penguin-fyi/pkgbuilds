pkgname='penguin-desktop-themes'
pkgver=4
pkgrel=1
pkgdesc="Themes, icons, and fonts for the Penguin Desktop"
arch=('any')
url="https://penguin.fyi/"
license=('MIT')
depends=(antsy-gtk-theme antsy-icon-theme
         idaeus-gtk-theme idaeus-icon-theme
         mint-gtk-theme mint-icon-theme
         nightfall-gtk-theme nightfall-icon-theme
         plum-gtk-theme plum-icon-theme
         system78-gtk-theme system78-icon-theme
         ttf-bitstream-vera noto-fonts-emoji
         ttf-dejavu ttf-hack ttf-nerd-fonts-symbols
         xcursor-neutral)
source=(
    'LICENSE'
    'README.md'
)

package(){
    install -Dm0644 README.md "$pkgdir"/usr/share/doc/penguin/desktop-themes/README.md
    install -Dm0644 LICENSE "$pkgdir"/usr/share/licenses/penguin/desktop-themes/LICENSE
}

md5sums=('32faed122940835fb3401d601b2d1e85'
         '6cf2030df59227fd5b9f3db73a571e25')
